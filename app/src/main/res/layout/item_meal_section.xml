<?xml version="1.0" encoding="utf-8"?>
<!-- Reusable meal section layout (Breakfast, Lunch, Dinner, Snacks) -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Section Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/iv_section_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/meal_type"
            android:src="@drawable/ic_time"
            app:tint="@color/primary_color"
            tools:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            tools:text="Breakfast"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_section_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450 kcal"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="450 kcal"
            tools:visibility="visible" />

    </LinearLayout>

    <!-- Populated Meal Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardBackgroundColor="@color/surface_dark"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardElevation="@dimen/card_elevation"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="@dimen/spacing_small">

                <TextView
                    android:id="@+id/tv_meal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Avocado Toast with Poached Egg"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Avocado Toast with Poached Egg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="@string/cooking_time"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_meal_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="15 mins"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="15 mins" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_circle_translucent" />

                    <TextView
                        android:id="@+id/tv_meal_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="350 kcal"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        tools:text="350 kcal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_meal_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_chip_active"
                    android:paddingStart="8dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="2dp"
                    android:text="HIGH PROTEIN"
                    android:textAllCaps="true"
                    android:textColor="@color/background_dark"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="HIGH PROTEIN"
                    tools:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_meal_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:contentDescription="@string/meal_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_food_logo"
                tools:src="@drawable/ic_food_logo" />

            <ImageButton
                android:id="@+id/btn_meal_options"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/options"
                android:padding="14dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/text_secondary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Empty State - Add Meal Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_add_meal"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardElevation="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_border_dashed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_translucent"
                android:contentDescription="@string/add_meal"
                android:padding="6dp"
                android:src="@drawable/ic_add"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_add_meal_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/add_breakfast"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Add Breakfast" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
